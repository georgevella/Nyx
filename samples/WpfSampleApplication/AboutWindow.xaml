        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSampleApplication"
        mc:Ignorable="d"
        Title="About" Height="248" Width="474" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="110*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Screen Commander" Grid.Column="1" Margin="0,10,10,0" Height="33" VerticalAlignment="Top" FontSize="18.667"/>
        <Button x:Name="button" Content="Close" Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,0,10" Width="86" Height="25" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
